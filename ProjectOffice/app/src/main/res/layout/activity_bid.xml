<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BidActivity">

    <TextView
        android:id="@+id/bidLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мои заявки на проверку"
        android:textSize="26sp"
        android:fontFamily="@font/jost"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/bidInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажмите на заявку для её удаления"
        android:textSize="18sp"
        android:fontFamily="@font/jost"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bidLabel"
        android:layout_marginStart="30dp" />

    <ListView
        android:id="@+id/bidList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bidInfoLabel"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--<FrameLayout
        android:id="@+id/bids"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bidInfoLabel"
        app:layout_constraintBottom_toBottomOf="parent"/>-->



</androidx.constraintlayout.widget.ConstraintLayout>